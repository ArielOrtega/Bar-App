<div class="container p-4">
    <div class="alert alert-secondary" role="alert">
        <h4>Editar Producto</h4>
    </div>
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card p-2">
                <div class="card-body">
                    <form action="/products/edit/{{product.ProductoId}}" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="Nombre" placeholder="Nombre" value="{{product.Nombre}}" required readonly>
                        </div>
                        <div class="form-group" aria-readonly="true">
                            {{#if bebida}}
                                <h3>Bebida</h3>
                                <input name="Tipo" type="number" value="1" readonly hidden>
                            {{/if}}
                            {{#if licor}}
                                <h3>Licor</h3>
                                <input name="Tipo" type="number" value="2" readonly hidden>
                            {{/if}}
                            {{#if comida}}
                                <h3>Comida</h3>
                                <input name="Tipo" type="number" value="3" readonly hidden>
                            {{/if}}
                        </div>
                        <div class="form-group">
                            <label>Cantidad</label>
                            <input type="number" class="form-control" name="Cantidad" placeholder="Cantidad" value="{{product.Cantidad}}" autofocus required>
                        </div>
                        <div class="form-group">
                            <label>Precio</label>
                            <input type="number" class="form-control" name="Precio" value="{{product.Precio}}" placeholder="Precio" min="0" required>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">Confirmar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>