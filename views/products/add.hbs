<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/products/add" method="POST">
                        <div class="form-group">
                            <label>Nombre</label>
                            <input type="text" class="form-control" name="Nombre" placeholder="Ingrese el nombre" autofocus required>
                        </div>
                        <div class="form-group">
                            <div>
                                <label>Indique el tipo de producto</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <label><input name="Tipo" type="radio" value="1" required>Bebida</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <label><input name="Tipo" type="radio" value="2" required>Licor</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <label><input name="Tipo" type="radio" value="3" required>Comida</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Cantidad</label>
                            <input type="number" class="form-control" name="Cantidad" placeholder="Cantidad" required>
                        </div>
                        <div class="form-group">
                            <label>Precio</label>
                            <input type="number" class="form-control" name="Precio" placeholder="Precio" min="0" required>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">Agregar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>