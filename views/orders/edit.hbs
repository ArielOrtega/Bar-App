<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/orders/edit/{{order.OrdenId}}" method="POST">
                        <div class="form-group">
                            <input type="text" value="{{order.NombreCliente}}" class="form-control" name="NombreCliente" placeholder="Nombre" autofocus required>
                        </div>
                        <div class="form-group">
                            <textarea name="Descripcion" placeholder="Descripcion" rows="5">{{order.Descripcion}}</textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">Confirmar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>